<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="facilityDetail" class="com.facility.model.FacilityDetail">
        <property name="created">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2019-03-20" />
            </bean>
        </property>
        <property name="name" value="Facility detail" />
        <property name="description" value="Interesting description" />
    </bean>

    <bean id="facilityInformation" class="com.facility.model.FacilityInformation">
        <property name="details" value="Facility information details" />
    </bean>

    <bean id="facilityProblem" class="com.facility.model.FacilityProblem">
        <property name="created">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2019-03-20" />
            </bean>
        </property>
        <property name="description" value="Problem description" />
        <property name="solved" value="true" />
    </bean>



    <bean id="dateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg value="yyyy-MM-dd" />
    </bean>
</beans>